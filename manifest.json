{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.1.3",
  "homepage_url": "https://dansnow.github.io/hoarder-pipette/",
  "name": "Hoarder's Pipette",
  "description": "Search smarter. Find your Hoarder bookmarks directly in search results.",
  "author": "David Peng",
  "background": {
    "service_worker": "./background/index.ts"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "options_ui": {
    "page": "./src/options.html"
  },
  "icons": {
    "16": "assets/logo16.png",
    "48": "assets/logo48.png",
    "128": "assets/logo128.png",
    "256": "assets/logo256.png"
  },
  "action": {
    "default_popup": "./src/options.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*", "https://www.ecosia.org/search*"],
      "js": ["./content/content.tsx"]
    }
  ],
  "optional_host_permissions": ["*://*/*"]
}
